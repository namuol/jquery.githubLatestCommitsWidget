body
  margin 0
  padding 0

.gh-ico
  width 22px
  height 22px
  margin-right 4px
  vertical-align top
  opacity .65
  background-position 0 -20px
  display inline-block

.latest-commits-widget
  border 1px solid borders
  width 500px
  height 250px
  font 13px helvetica, arial, freesans, clean, sans-serif
  background main_background

.latest-commits-widget a:hover
  text-decoration underline

.latest-commits-header
  background-color gradient_bottom
  background-image url(github-icons.png), -moz-linear-gradient(top, gradient_top, gradient_bottom)
  background-image url(github-icons.png), -ms-linear-gradient(top, gradient_top, gradient_bottom)
  background-image url(github-icons.png), -o-linear-gradient(top, gradient_top, gradient_bottom)
  background-image url(github-icons.png), -webkit-gradient(linear, left top, left bottom, from(gradient_top), to(gradient_bottom))
  background-image url(github-icons.png), -webkit-linear-gradient(top, gradient_top, gradient_bottom)
  background-image url(github-icons.png), linear-gradient(center top, gradient_top 0%, gradient_bottom 100%)
  background-repeat no-repeat, repeat
  background-position 5px -15px, 0 0
  unquote("filter:progid:DXImageTransform.Microsoft.gradient(startColorStr='gradient_top', EndColorStr='gradient_bottom');")
  border-bottom 1px solid borders
  color header_color
  height 26px
  margin 0
  padding 9px 0 0 36px
  text-shadow 1px 0 1px header_shadow_color
  font-size 1.3em
  font-weight bold

.latest-commits-header h4
  margin 0
  padding .25em 0 0 0
  display inline-block

.latest-commits-widget ul.commit-history
  overflow-y auto
  height 214px
  padding-left 0
  margin 0

.latest-commits-widget ul.commit-history li
  list-style-type none
  background-color gradient_bottom
  background-image -moz-linear-gradient(top, gradient_top, gradient_bottom)
  background-image -ms-linear-gradient(top, gradient_top, gradient_bottom)
  background-image -o-linear-gradient(top, gradient_top, gradient_bottom)
  background-image -webkit-gradient(linear, left top, left bottom, from(gradient_top), to(gradient_bottom))
  background-image -webkit-linear-gradient(top, gradient_top, gradient_bottom)
  background-image linear-gradient(center top, gradient_top 0%, gradient_bottom 100%)
  unquote("filter:progid:DXImageTransform.Microsoft.gradient(startColorStr='gradient_top', EndColorStr='gradient_bottom');")
  border-bottom 1px solid borders
  padding 5px

.latest-commits-widget ul.commit-history li .commit-message
  font-size .8em
  text-decoration none
  color commit_msg_color

.latest-commits-widget ul.commit-history li .commit-message:hover
  text-decoration underline

.latest-commits-widget ul.commit-history li .commit-sha
  color sha_color
  font-size .8em
  font-style italic

.latest-commits-widget ul.commit-history li .commit-date
  display inline
  color date_color
  font-size .8em
  font-weight bold

.latest-commits-widget ul.commit-history li a,#latest-commits-widget ul#commit-history li a:visited
  color date_color
  text-decoration none

.latest-commits-widget ul.commit-history li .commit-author
  display inline
  font-weight bold

.latest-commits-widget ul.commit-history li .commit-avatar
  height 32px
  width 32px
  border-radius 4px
